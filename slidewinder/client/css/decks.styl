@import 'jeet'

.create-deck
  nav
    box-shadow none
    background #f2f2f2 linear-gradient(to bottom, #fff, #f2f2f2) repeat-x

  #sidebar-left
    col(2/5)
    .collapsible-header
      padding 0
    form
      width 100%
      height 70px
      padding 0
      input[type='search']
        input()
        color #555
        position absolute
        top 10px
        left 10px
        right 10px
        height 36px
        padding-left 40px
      .search-wrapper
        position relative
        width 100%
        i
          position absolute
          top 14px
          left 16px
          color #bbb
    .slides-results
      padding 10px
      width 100%
    .slide-no
      display none

  #content-pane
    col(3/5)
    height 100%
    b()
    position relative
    .row-header
      padding-top 1px
      padding-left 6px
    .nsg-editor
      display inline-block
      margin 0
      padding 0
    .nsg-input
      margin 0
    .nsg-tag
      height 28px
      margin-top 10px
    .nsg-tags
      display inline-block
      line-height 22px
      height 100%
    .nsg-tags-before
      margin-right 14px

    .deck-metadata
      display inline-block
      width auto
      min-width 36px
      max-width 200px
      input()
      height 36px
      margin 0
      margin-right 4px

    .slide-no
      position absolute
      left 0
      top 0
      text-align center
      z-index 999
      display block
      width 100%
      height 100%
      background-color rgba(0, 0, 0, 0.5)
      color #bbb
      h1
        font-size 10rem
        height 100%
        vertical-align middle
    .slide-card:hover
      .slide-no
        display none

    #save_deck_btn
      button(#666)
      width auto
      position absolute
      top 8px
      right 8px
      z-index 102
      uppercase()
      height 46px
      padding-top 17px
      no-select()

    #slide-receiver
      height auto
      min-height 300px
      padding 20px
      overflow-y scroll

.slide-text-card
  .card-truncated
    width 100%
    height 100%
    display inline-block
    text-align left
    h1, h2, h3, h4, h5, h6, p, ul, li, code, pre
      font-size 0.4vw
      margin 0
      margin-bottom 2px
    img
      max-width 100%

.deck-card
  position relative

  .deck-present
    uppercase()
    button green

  .deck-edit
    uppercase()
    button orange

  .deck-card-count
    position absolute
    bottom 0
    left 0
    padding-left 20px

  .deck-card-btn-bar
    display none
    position absolute
    bottom 0
    right 0
    padding 10px

  .deck-card-btn-bar.active
    display block

.flash-err
  flash: 'error'
  font-weight 300
