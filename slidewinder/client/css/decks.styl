@import 'jeet'

#new-deck-btn
  button(green)
  uppercase()
  margin-left 30px
  margin-top 8px

.create-deck
  nav
    box-shadow none
    background #f2f2f2 linear-gradient(to bottom, #fff, #f2f2f2) repeat-x

  #sidebar-left
    width 320px
    .collapsible-header
      padding 0
    form
      width 100%
      height 70px
      padding 0
      .switch
        uppercase()
        display inline-block
      .switch label input[type=checkbox]:checked + .lever
        background-color green
      .switch label input[type=checkbox]:checked + .lever:after
        background-color silver
      .switch label input[type=checkbox]:not(:checked) + .lever
        background-color blue
      .switch label input[type=checkbox]:not(:checked) + .lever:after
        background-color silver
      input[type='search']
        input()
        color #555
        position relative
        margin-top 10px
        margin-left 10px
        height 36px
        padding-left 40px
      .search-wrapper
        position relative
        display inline-block
        margin-right 20px
        i
          position absolute
          top 14px
          left 16px
          color #bbb
    .slides-results
      padding 10px
      width 100%
    .slide-no
      display none

  #content-pane
    height 100%
    width calc(100% - 350px);
    b()
    .row-header
      padding-top 1px
      padding-left 6px
    .switch
      uppercase()
      display inline-block
    .switch label input[type=checkbox]:checked + .lever
      background-color green
    .switch label input[type=checkbox]:checked + .lever:after
      background-color silver
    .switch label input[type=checkbox]:not(:checked) + .lever
      background-color blue
    .switch label input[type=checkbox]:not(:checked) + .lever:after
      background-color silver
    .nsg-editor
      display inline-block
      margin 0
      padding 0
    .nsg-input
      margin 0
    .nsg-tag
      height 28px
      margin-top 10px
    .nsg-tags
      display inline-block
      line-height 22px
      height 100%
    .nsg-tags-before
      margin-right 14px

    .deck-metadata
      display inline-block
      width auto
      min-width 36px
      max-width 200px
      input()
      height 36px
      margin 0
      margin-right 4px

    .slide-no
      position absolute
      left 0
      top 0
      text-align center
      z-index 999
      display block
      width 100%
      height 100%
      background-color rgba(0, 0, 0, 0.5)
      color #bbb
      h1
        font-size 10rem
        height 100%
        vertical-align middle
    .slide-card:hover
      .slide-no
        display none

    #save_deck_btn
      button(#666)
      width auto
      position absolute
      top 8px
      right 8px
      z-index 102
      uppercase()
      height 46px
      padding-top 17px
      no-select()

    #slide-receiver
      height auto
      min-height 300px
      padding 20px
      overflow-y scroll

.slide-text-card
  .card-truncated
    width 100%
    height 100%
    display inline-block
    text-align left
    h1, h2, h3, h4, h5, h6, p, ul, li, code, pre
      font-size 0.4vw
      margin 0
      margin-bottom 2px
    img
      max-width 100%

.deck-card
  position relative

  .deck-present
    uppercase()
    button green

  .deck-edit
    uppercase()
    button orange

  .deck-card-count
    position absolute
    bottom 0
    left 0
    padding-left 20px

  .deck-card-btn-bar
    display none
    position absolute
    bottom 0
    right 0
    padding 10px
    button
      button()
      padding 10px
      margin-left 10px
      color white !important

  .deck-card-btn-bar.active
    display block

  .confirm-delete
    z-index 999
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background rgba(0, 0, 0, 0.9)
    text-align center
    color white
    padding-top 70px

    .confirm-deck-del-btn
      button(green)
      margin 10px
    .cancel-deck-del-btn
      button(red)
      margin 10px

.flash-err
  flash: 'error'
  font-weight 300
