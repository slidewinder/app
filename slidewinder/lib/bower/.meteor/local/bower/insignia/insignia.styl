 @import 'node_modules/nib/index'

 .nsg-editor
  padding 10px
  cursor text

.nsg-tag
  display inline-block
  border 1px solid #666
  padding 3px
  margin 4px

.nsg-tag-remove:after
  margin-left 4px
  padding 0 4px
  content 'x'
  background-color #ccc
  cursor pointer

.nsg-input
  transition width 0.25s
  padding 3px
  margin 5px 0
